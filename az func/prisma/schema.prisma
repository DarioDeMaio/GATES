generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-1.1.x", "windows"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Dispositivo {
  id               Int       @id @default(autoincrement())
  connectionString String
  matricola        String    @unique
  water Acqua?
  aria Aria?
}

model Acqua{
  //id               Int       @id @default(autoincrement())
  device    Dispositivo @relation(fields: [idDispositivo], references: [id], onDelete: Cascade)
  idDispositivo  Int @unique
  misurazioniAcqua MisurazioniAcqua[]
}

model MisurazioniAcqua{
  id               Int       @id @default(autoincrement())
  pH Float
  metalli Float
  dispositivo Acqua @relation(fields: [dispId], references: [idDispositivo])
  dispId Int
}

model Aria{
  //id               Int       @id @default(autoincrement())
  device    Dispositivo @relation(fields: [idDispositivo], references: [id], onDelete: Cascade)
  idDispositivo  Int @unique
  misurazioneAria MisurazioniAria[]
}

model MisurazioniAria{
  id               Int       @id @default(autoincrement())
  cov Float
  gas Float
  dispositivo Aria @relation(fields: [dispId], references: [idDispositivo])
  dispId Int
}


