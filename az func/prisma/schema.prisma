generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-1.0.x", "windows"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tipologia {
  id          Int           @id @default(autoincrement())
  tipo        String
  dispositivi Dispositivo[]
}

model Dispositivo {
  id               Int       @id @default(autoincrement())
  connectionString String
  matricola        String    @unique
  tipologiaId      Int
  tipo             Tipologia @relation(fields: [tipologiaId], references: [id])
}
